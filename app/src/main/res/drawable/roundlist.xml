<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/yellow_500" />
            <corners
                android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="@color/yellow_500" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/pink_200" />
            <corners
                android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="@color/pink_200" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


</selector>